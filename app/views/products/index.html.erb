<% content_for :left do %>
  <h1>Listing products</h1>

  <table class="marketTable">
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Price</th>
      <th>Category</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @products.each do |product| %>
    <tr>
      <td><%= product.title %></td>
      <td><%= product.body %></td>
      <td><%= product.price %></td>
      <td>
        <% if !product.category_id.nil? %>
          <%= Category.find_by_id(product.category_id).name %>
        <% else %>
          None
        <% end %>   
      </td>
      <td>
      <% product.product_images.all.each do |p| %>
        <%= image_tag p.photo.url( :medium) %>
      <% end %>
      </td>        
      <td><%= link_to 'Show', product %></td>
      <td><%= link_to 'Edit', edit_product_path(product) %></td>
      <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
  </table>

  <br />

  <%= link_to 'New Product', new_product_path %>
<% end %>

<% content_for :right do %>
  
<% end %>