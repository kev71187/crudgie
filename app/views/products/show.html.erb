<% content_for :left do %>
	<p id="notice"><%= notice %></p>
	<p>
	  <b>Title:</b>
	  <%= @product.title %>
	</p>

	<p>
	  <b>Body:</b>
	  <%= @product.body %>
	</p>

	<p>
	  <b>Price:</b>
	  <%= @product.price %>
	</p>

	<p>
	  <b>Category:</b>
      <% if !@product.category_id.nil? %>
          <%= Category.find_by_id(@product.category_id).name %>
        <% else %>
          None
        <% end %>   
	</p>
	<p>
		<% @product.product_images.all.each do |p| %>
			<%= image_tag p.photo.url( :large) %>
		<% end %>	
	</p>

	<%= link_to 'Edit', edit_product_path(@product) %> |
	<%= link_to 'Back', products_path %>
<% end %>

<% content_for :right do %>
  
<% end %>