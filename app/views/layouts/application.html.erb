<% pageUri = request.env['PATH_INFO'] %>

<!DOCTYPE html>
<html>
<head>
    <title> Gluten Free Reference | <%= yield :title %></title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= javascript_include_tag params[:controller] %>
	<%= stylesheet_link_tag params[:controller] %>
</head>
<body>
	<div class="container">
		<div class="headerContainer">
			<div id="header">
				<div class="logo"><img src="/assets/logot1.png"></div>
				<div class="tagLine">Your gluten free reference.</div>
				<div class="menuBar">
					<ul class="menuBarButton">
						<li class="
							<%= 
							if pageUri == '/'
								" active"
							end
							%>
						"><a href="/">Home</a>
						</li>
						<li class="
							<%= 
							if pageUri == '/gluten_free_products'
								" active"
							end
							%>
						"><a href="/gluten_free_products">Gluten Free Products</a>
						</li>
						<% if current_user_is_admin? %>
							<li class="manage"><a href="">Manage</a>
								<div class="adminPanel">
									<ul>										
										<li class="
											<%= 
											if pageUri == '/products'
												" active"
											end
											%>
										"><%= link_to "Products", products_path %>
										</li>
										<li class="
											<%= 
											if pageUri == '/blogs'
												" active"
											end
											%>
										"><%= link_to "Blogs", blogs_path %>
										</li>
										<li class="
											<%= 
											if pageUri == '/categories'
												" active"
											end
											%>
										"><%= link_to "Categories", categories_path %>
										</li>
										<li class="
											<%= 
											if pageUri == '/stores'
												" active"
											end
											%>
										"><%= link_to "Stores", stores_path %>
										</li>
										<li class="
											<%= 
											if pageUri == '/products_stores'
												" active"
											end
											%>
										"><%= link_to "Store Products", products_stores_path %>
										</li>										
										<li class="
											<%= 
											if pageUri == '/comments'
												" active"
											end
											%>
										"><%= link_to "Comments", comments_path %>
										</li>
										<li class="
											<%= 
											if pageUri == '/ratings'
												" active"
											end
											%>
										"><%= link_to "Ratings", ratings_path %>
										</li>
										<li class="
											<%= 
											if pageUri == '/users'
												" active"
											end
											%>
										"><%= link_to "Users", users_path %>
										</li>
									</ul>
								</div>
							</li>												
						<% end %>
											
					</ul>
				</div>
				<div class="social">
					<img height="30" width="30" src="/assets/twitter-logo.jpeg">
				</div>
				<div class="clear"></div>
			</div>					
		</div>				
		<div id="content">
			<div id="leftContent">
				<%= yield :left %>
			</div>
			<div id="rightContent">
				<%= yield :right %>
			</div>
			<div class="clear"></div>				
		</div>
		<div id="footer">
			<div id="user_nav">				
				<%= link_to "Register", new_user_path %>
				<% if current_user %>
					<%= link_to "Logout", logout_path %>
				<% else %>
					<%= link_to "Login", login_path %>
				<% end %>
			</div>
		</div>
	</div>
	<script type="text/javascript">

	  var _gaq = _gaq || [];
	  _gaq.push(['_setAccount', 'UA-38602750-1']);
	  _gaq.push(['_trackPageview']);

	  (function() {
	    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
	    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
	    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
	  })();

	</script>
</body>
</html>
