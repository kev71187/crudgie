<div id="blogForm">
<%= form_for(@blog) do |f| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
      <% @blog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field" id="blogBody">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
    <div class="demoBody"></div>
  </div>
  <div class="field">
    <%= f.label :product_id %><br />
    <%= select("blog", "product_id", Product.all.collect {|p| [ p.title, p.id ] }, {:include_blank => 'None'}) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>
